<div class="container">

  <h1>Edit Profile</h1>

  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>  
    
    <div class="form-group">
      <%= f.label :intro, "自我介紹" %>
      <%= f.text_area :intro, class: "form-control", rows: "2" %>
    </div>
  
    <div class="form-group">
      <%= f.label :avatar, "大頭照上傳" %>
      <%= image_tag @user.avatar, width: '150px' if @user.avatar? %>
      <%= f.file_field :avatar %>
    </div>

    <div class="form-group">
      <%= f.submit class: "btn btn-info btn-primary" %>
      <%= f.button "Cancel", type: :reset, class: "btn btn-secondary btn-default" %>
    </div>
  <% end %>

</div>