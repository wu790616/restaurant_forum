<div class="container">


  <!-- 導航列，各分頁連結 -->
  <ul class="nav nav-tabs">
    <li role="presentation"><%= link_to '首頁', root_path %></li>
    <li role="presentation"><%= link_to '最新動態', feeds_restaurants_path %></li>
    <li role="presentation" class="active"><%= link_to '美食達人', users_path %></li>
  </ul>
  
  <h2>美食達人</h2>
  <hr>

  <div class="row equal">
    <% @users.each do |user| %>
      <div class="col-sm-4 col-xs-6 col-md-2 col-md-offset-1 text-center user_item">
        <%= image_tag user.avatar, class: "img-thumbnail", alt: "使用者未上傳圖片" %>
        <p><%= link_to user.name, user_path(user) %></p>
        <%= render partial: "shared/follow", locals: {user: user} %>
      </div>
    <% end %>
  </div>

</div>