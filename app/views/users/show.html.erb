<div class="container">
  <div class="row">
    <br>
    <div class="col-md-3 col-md-offset-1">
      <%= image_tag @user.avatar, class: "img-responsive" %>
    </div>
    
    <div class="col-md-7 ">
      <ul class="list-group">
        <li class="list-group-item">
          <span class="badge badge-primary badge-pill">Name</span><br>
          <h2><%= @user.name %></h2>
        </li>
        <li class="list-group-item">
          <span class="badge badge-primary badge-pill">Email</span><br>
          <%= @user.email %>    
        </li>
        <li class="list-group-item">
          <span class="badge badge-primary badge-pill">Intro</span><br>
          <%= @user.intro %>
        </li>
        <li class="list-group-item"><%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %></li>
      </ul>
    </div>
    
    <div class="col-md-10 col-md-offset-1">
      <br>
      <div class="panel panel-default">
        <div class="panel-heading">已評論餐廳</div>
        <div class="panel-body">
          <% @commented_restaurants = @commented_restaurants.uniq %>
          <% @commented_restaurants.each do |restaurant| %>
            <%= link_to(restaurant_path(restaurant)) do %>
              <div class="my-restaurant">
                <%= image_tag restaurant.image, class: "img img-responsive" %>
                <p><%= restaurant.name %></p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>     
    </div>
  
  </div>
</div>