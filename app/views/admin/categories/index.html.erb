<div class="container">

  <h1>餐廳分類總表</h1>
  <h5>
    <%= link_to 'Restaurant', admin_restaurants_path %> |
    <%= link_to 'Category', admin_categories_path %>
  </h5>

  <div class="col-md-8">
    <table class="table table-bordered">
      <thead>
        <tr class="info">
          <th>#</th>
          <th>Category Name</th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
        <tr>
          <th scope="row"><%= category.id %></th>
          <td><%= category.name %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>